<div class="row login">
  <div class="col-md-6 mx-auto centralise">
    <div class="card card-body login-body">
      <h3 class="text-center">Account Login</h3>
      {{> _msg}}
      {{> _errors}}
      <form action="/user/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" class="form-control" required>
        </div>
        <div class="form-group mt-4 mb-5">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" minlength="6" maxlength="32" required>
        </div>
        <button type="submit" class="btn btn-success lb">LOGIN</button>
        <p>Not registered yet? <a href="/register"> Register </a></p>
      </form>
    </div>
  </div>
</div>